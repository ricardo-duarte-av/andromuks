<?xml version="1.0" encoding="utf-8"?><!--
   Data extraction rules file - excludes sensitive authentication data from cloud backup
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
   for details.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude authentication and session data from cloud backup for security -->
        <exclude domain="sharedpref" path="AndromuksAppPrefs.xml"/>
        <exclude domain="sharedpref" path="fcm_prefs.xml"/>
        <exclude domain="sharedpref" path="web_client_prefs.xml"/>
        <exclude domain="sharedpref" path="fcm_notification_manager_prefs.xml"/>
    </cloud-backup>
    <!--
    Device transfer rules - also exclude sensitive data during device-to-device transfer
    -->
    <device-transfer>
        <exclude domain="sharedpref" path="AndromuksAppPrefs.xml"/>
        <exclude domain="sharedpref" path="fcm_prefs.xml"/>
        <exclude domain="sharedpref" path="web_client_prefs.xml"/>
        <exclude domain="sharedpref" path="fcm_notification_manager_prefs.xml"/>
    </device-transfer>
</data-extraction-rules>